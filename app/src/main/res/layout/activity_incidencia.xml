<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncidenciaActivity">

    <include layout="@layout/header_layout"></include>

    <include layout="@layout/footer_layout"></include>

    <TextView
        android:id="@+id/form_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Formulario"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="90dp"
        android:gravity="center">

        <TextView
            android:id="@+id/title_label"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:text="Titulo: "
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/title_label1"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/title_label"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text=""/>

        <TextView
            android:id="@+id/img_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_label"
            android:layout_marginTop="15dp"
            android:text="Im치genes"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="98.44dp"
            android:layout_height="175dp"
            android:layout_below="@+id/img_label">
        </ImageView>


        <ImageView
            android:id="@+id/img_2"
            android:layout_width="98.44dp"
            android:layout_height="175dp"
            android:layout_below="@+id/img_label"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/img_1"></ImageView>

        <ImageView
            android:id="@+id/img_3"
            android:layout_width="98.44dp"
            android:layout_height="175dp"
            android:layout_below="@+id/img_label"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/img_2"></ImageView>

        <TextView
            android:id="@+id/loc_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_1"
            android:layout_marginTop="0dp"
            android:text="Localizaci칩n"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_label"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loc_label"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Direcci칩n: "
             />

        <TextView
            android:id="@+id/address_label1"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loc_label"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/address_label"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/lat_label"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_label"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Latitud: "
             />

        <TextView
            android:id="@+id/lat_label1"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_label1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/lat_label"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/long_label"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lat_label"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Longitud: "
            />

        <TextView
            android:id="@+id/long_label1"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lat_label1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/long_label"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/desc_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/long_label1"
            android:layout_marginTop="20dp"
            android:text="Descripci칩n"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="315dp"
            android:layout_height="159dp"
            android:layout_below="@+id/desc_label"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="1dp"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/imageButtonDesc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/editTextTextMultiLine"
            android:layout_marginTop="34dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/editTextTextMultiLine"
            android:backgroundTint="#ffffff"
            android:src="@drawable/back_mic_1" />

        <ImageButton
            android:id="@+id/imageButtonGrid"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/loc_label"
            android:layout_below="@+id/img_label"
            android:layout_marginStart="13dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:layout_toEndOf="@+id/img_3"
            android:backgroundTint="#ffffff"
            android:src="@drawable/back_cam_1" />


    </RelativeLayout>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:text="Enviar"
        android:textColor="@color/white"
        android:backgroundTint="#42A4FF"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:text="Volver"
        android:textColor="@color/white"
        android:backgroundTint="#2196F3"/>

</RelativeLayout>